<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.ambulancedriverapp.MainActivity">
<TextView
        android:text="SEVERITY:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorblack"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit1"
        android:layout_alignRight="@+id/three"
        android:layout_alignEnd="@+id/three"
        android:layout_alignBottom="@+id/number"
        android:layout_alignTop="@+id/number"
        android:layout_alignLeft="@+id/three"
        android:layout_alignStart="@+id/three" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_above="@+id/low"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:id="@+id/low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:text="LOW"

        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:text="Medium"
        android:layout_alignBaseline="@+id/low"
        android:layout_alignBottom="@+id/low"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorred"
        android:text="high"
        android:layout_alignBaseline="@+id/med"
        android:layout_alignBottom="@+id/med"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:text="NO: OF CASUALITY :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorblack"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/number"
        android:layout_below="@+id/low"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <Button
        android:id="@+id/one"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@drawable/my_button_bg"
        android:text="1"
        android:layout_below="@+id/number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/two"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/my_button_bg"
        android:text="2"
        android:layout_below="@+id/number"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:id="@+id/three"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/my_button_bg"
        android:text="3"
        android:layout_above="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:id="@+id/four"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@drawable/my_button_bg"
        android:text="4"
        android:layout_below="@+id/edit1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleX=".8"
        android:scaleY=".8"
        app:srcCompat="@drawable/headin"
        android:background="@drawable/my_button_bg"
        android:id="@+id/headinjury"
        android:layout_alignTop="@+id/accident"
        android:layout_alignLeft="@+id/pregnancy"
        android:layout_alignStart="@+id/pregnancy" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleX=".8"
        android:scaleY=".8"
        app:srcCompat="@drawable/hearattack"
        android:id="@+id/heartattack"
        android:background="@drawable/my_button_bg"

        android:layout_alignTop="@+id/pregnancy"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleX=".8"
        android:scaleY=".8"
        app:srcCompat="@drawable/accident"
        android:id="@+id/accident"
        android:background="@drawable/my_button_bg"
        android:layout_above="@+id/submit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleX=".8"
        android:scaleY=".8"
        app:srcCompat="@drawable/other"
        android:background="@drawable/my_button_bg"
        android:id="@+id/others"

        android:layout_alignTop="@+id/headinjury"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleX=".8"
        android:scaleY=".8"
        app:srcCompat="@drawable/fire"
        android:background="@drawable/my_button_bg"
        android:id="@+id/fire"
        android:layout_alignTop="@+id/pregnancy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleX=".8"
        android:scaleY=".8"
        app:srcCompat="@drawable/pregnancy"
        android:background="@drawable/my_button_bg"
        android:id="@+id/pregnancy"
        android:layout_above="@+id/headinjury"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TYPE OF EMERGENCY:"
        android:textColor="@color/colorblack"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_above="@+id/fire"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/med"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/med"
        android:background="@drawable/my_button_bg"
        android:text="SUBMIT" />




</RelativeLayout>